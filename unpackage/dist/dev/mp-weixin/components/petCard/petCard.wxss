
.petInfo{
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background-color: white;
	margin: 0 32rpx;
	border-radius: 16rpx;
	box-shadow: 0 2rpx 4rpx 0 rgba(2, 4, 38, 0.05);
	border-color: #EEEEEE;
	padding: 50rpx 50rpx;
	font-size: 30rpx;
	color: black;
}
.petText{
	display: flex;
	flex-direction: column;
}
.petText ._span:first-child{
	font-size: 50rpx;
	margin-bottom: 20rpx;
}
